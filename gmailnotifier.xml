<grammar version="1.0" xml:lang="fr-FR" mode="voice" root="gmailnotifier" xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics/1.0">
  <rule id="gmailnotifier" scope="public">
    <example>Sarah verifie mes mails</example>
    <tag>out.action=new Object(); </tag>
    <item weight="2">Sarah</item>
    <one-of>
      <item>verifie mes mails<tag>out.action.request="compteunread"</tag></item>
	  <item>lecture de mes mails<tag>out.action.request="readmails"</tag></item>
    </one-of>

    <tag>out.action._attributes.uri="http://127.0.0.1:8080/sarah/gmailnotifier";</tag>
  </rule>
</grammar>